<UserControl x:Class="cardsArefun.Cards.CardListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cardsArefun.Cards"
             mc:Ignorable="d" 
             Height="275" Width="175">
    <Grid>
        <Image Source="{Binding ImageSource, UpdateSourceTrigger=PropertyChanged}" Height="250" VerticalAlignment="Top"/>
        <Label Content="{Binding CardName, UpdateSourceTrigger=PropertyChanged}" HorizontalContentAlignment="Center" VerticalAlignment="Bottom"/>

    </Grid>
</UserControl>
